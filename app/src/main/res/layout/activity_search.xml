<?xml version="1.0" encoding="utf-8"?>

<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".search.SearchActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"
            card_view:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/location_card"
                    style="@style/query_card_view"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout style="@style/query_group_iew">

                        <TextView
                            android:id="@+id/location_title"
                            style="@style/query_title"
                            android:text="Location" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:orientation="horizontal"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/location_icon"
                                style="@style/query_icon"
                                android:src="@drawable/ic_place_black_24dp" />

                            <TextView
                                android:id="@+id/location_value"
                                style="@style/query_value"
                                android:text="Any" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/rent_rate_card"
                    style="@style/query_card_view"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout style="@style/query_group_iew">

                        <TextView
                            android:id="@+id/rent_rate_title"
                            style="@style/query_title"
                            android:text="@string/rent_rate" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:orientation="horizontal"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/rent_rate_icon"
                                style="@style/query_icon"
                                android:src="@drawable/ic_attach_money_black_24dp" />

                            <TextView
                                android:id="@+id/rent_rate_value"
                                style="@style/query_value"
                                android:text="Any" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/bathrooms_card"
                    style="@style/query_card_view"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout style="@style/query_group_iew">

                        <TextView
                            android:id="@+id/bathrooms_title"
                            style="@style/query_title"
                            android:text="Bathrooms" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:orientation="horizontal"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/bathrooms_icon"
                                style="@style/query_icon"
                                android:src="@drawable/ic_hot_tub_black_24dp" />

                            <TextView
                                android:id="@+id/bathrooms_value"
                                style="@style/query_value"
                                android:text="Any" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/property_type_card"
                    style="@style/query_card_view"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout style="@style/query_group_iew">

                        <TextView
                            android:id="@+id/property_type_title"
                            style="@style/query_title"
                            android:text="Property Type" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:orientation="horizontal"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/property_type_icon"
                                style="@style/query_icon"
                                android:src="@drawable/ic_property_black_24dp" />

                            <TextView
                                android:id="@+id/property_type_value"
                                style="@style/query_value"
                                android:text="Any" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/existing_flatmates_card"
                    style="@style/query_card_view"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout style="@style/query_group_iew">

                        <TextView
                            android:id="@+id/existing_flatmates_title"
                            style="@style/query_title"
                            android:text="Existing flatmates" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:orientation="horizontal"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/existing_flatmates_icon"
                                style="@style/query_icon"
                                android:src="@drawable/ic_group_black_24dp" />

                            <TextView
                                android:id="@+id/existing_flatmates_value"
                                style="@style/query_value"
                                android:text="Any" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/smokers_checkBox"
                            style="@style/checkBox_query"
                            android:text="Smokers Ok" />

                        <CheckBox
                            android:id="@+id/pets_checkBox"
                            style="@style/checkBox_query"
                            android:text="Pets Ok" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="horizontal">

                        <CheckBox

                            android:id="@+id/couples_checkBox"
                            style="@style/checkBox_query"
                            android:text="Couples Ok" />

                        <CheckBox

                            android:id="@+id/available_checkBox"
                            style="@style/checkBox_query"
                            android:text="Available now" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </ScrollView>


        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.3"
            android:text="search" />


    </LinearLayout>

</layout>
